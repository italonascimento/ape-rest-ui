{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": ["es6", "dom"],
        "baseUrl": "./src",
        "paths" : {
          "": ["./src/*"]
        }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
